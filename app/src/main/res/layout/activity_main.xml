<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        >

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:text="@string/teamA_name"
                style="@style/TeamName"
                />
            <TextView
                android:id="@+id/teamA_score"
                style="@style/TeamScore"
                />
            <Button
                android:id="@+id/teamA_add3"
                android:text="@string/add3"
                style="@style/ScoreButton"
                android:onClick="onTeamA_addPoints"
                />
            <Button
                android:id="@+id/teamA_add2"
                android:text="@string/add2"
                style="@style/ScoreButton"
                android:onClick="onTeamA_addPoints"
                />
            <Button
                android:id="@+id/teamA_add1"
                android:text="@string/add1"
                style="@style/ScoreButton"
                android:onClick="onTeamA_addPoints"
                android:layout_marginBottom="8dp"
                />
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray"
            >

        </View>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:text="@string/teamB_name"
                style="@style/TeamName"
                />
            <TextView
                android:id="@+id/teamB_score"
                style="@style/TeamScore"
                />
            <Button
                android:id="@+id/teamB_add3"
                android:text="@string/add3"
                style="@style/ScoreButton"
                android:onClick="onTeamB_addPoints"
                />
            <Button
                android:id="@+id/teamB_add2"
                android:text="@string/add2"
                style="@style/ScoreButton"
                android:onClick="onTeamB_addPoints"
                />
            <Button
                android:id="@+id/teamB_add1"
                android:text="@string/add1"
                style="@style/ScoreButton"
                android:onClick="onTeamB_addPoints"
                android:layout_marginBottom="8dp"
                />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/reset"
        android:onClick="onReset"
        android:layout_margin="32dp"
        />

</RelativeLayout>
